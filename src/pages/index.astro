---
import PageLayout from '@layouts/PageLayout.astro';
import HeroText from '@components/HeroText.astro';
import HireMe from '@components/HireMe.astro';
import PostList from '@components/PostList.astro';
import { config } from '@config';
---

<PageLayout>
  <section class="intro">
    <p>Hi! My name's</p>

    <HeroText animationName="phase">Andrew Aquino.</HeroText>

    <p>
      I'm a frontend software engineer in Southern California. My specialties
      are CSS/animation, modern JavaScript (React, Svelte), and interactive
      visual experiences (data visualization with D3, three.js).
    </p>
    <p>
      These are my projects and notes about <strong>JavaScript</strong>,
      <strong>CSS</strong>,
      <strong>design</strong>, and <strong>anything else I'm learning</strong>.
    </p>
  </section>

  {config.lookingForWork ? <HireMe /> : null}

  <section>
    <h2>Latest posts</h2>

    <PostList numPosts="3" />

    <a href="/blog/">See all</a>
  </section>
</PageLayout>

<style>
  :global(section) {
    margin-block-end: var(--gap-section);
  }

  .intro p:first-child {
    margin-block-end: 0;
  }
</style>
